<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FeedFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUsers"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/etSearch"
        android:layout_alignStart="@+id/etSearch"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/HappyMix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etSearch"
        android:layout_alignStart="@+id/etSearch"
        android:layout_marginStart="110dp"
        android:layout_marginTop="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:fontFamily="@font/waukegan_ldo_bold"
        android:text="Happy Mix"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvHappyDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HappyMix"
        android:layout_alignStart="@+id/etSearch"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:text="Songs to get you feeling "
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvHappy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HappyMix"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tvHappyDesc"
        android:text="Happy"
        android:textColor="#FFD500"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/SadMix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHappyDesc"
        android:layout_alignStart="@+id/etSearch"
        android:layout_marginStart="120dp"
        android:layout_marginTop="45dp"
        android:background="?android:attr/selectableItemBackground"
        android:fontFamily="@font/waukegan_ldo_bold"
        android:text="Sad Mix"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSadDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SadMix"
        android:layout_alignStart="@+id/etSearch"
        android:layout_marginStart="75dp"
        android:layout_marginTop="10dp"
        android:text="Songs to get you feeling: "
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvSad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SadMix"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tvSadDesc"
        android:text="Sad"
        android:textColor="#66B2FF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/AngryMix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSadDesc"
        android:layout_alignStart="@+id/etSearch"
        android:layout_marginStart="110dp"
        android:layout_marginTop="45dp"
        android:background="?android:attr/selectableItemBackground"
        android:fontFamily="@font/waukegan_ldo_bold"
        android:text="Angry Mix"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAngryDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AngryMix"
        android:layout_alignStart="@+id/etSearch"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:text="Songs to get you feeling: "
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvAngry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AngryMix"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tvAngryDesc"
        android:text="Angry"
        android:textColor="#CC0000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ChillMix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAngryDesc"
        android:layout_alignStart="@+id/etSearch"
        android:layout_marginStart="120dp"
        android:layout_marginTop="45dp"
        android:background="?android:attr/selectableItemBackground"
        android:fontFamily="@font/waukegan_ldo_bold"
        android:text="Chill Mix"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tvChillDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ChillMix"
        android:layout_alignStart="@+id/etSearch"
        android:layout_marginStart="75dp"
        android:layout_marginTop="10dp"
        android:text="Songs to get you feeling: "
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvChill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ChillMix"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tvChillDesc"
        android:text="Chill"
        android:textColor="#CC99FF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/EnergizedMix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvChillDesc"
        android:layout_alignStart="@+id/etSearch"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginStart="95dp"
        android:layout_marginTop="45dp"
        android:text="Energized Mix"
        android:fontFamily="@font/waukegan_ldo_bold"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvEnergizedDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EnergizedMix"
        android:layout_alignStart="@+id/etSearch"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:text="Songs to get you feeling: "
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvEnergized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EnergizedMix"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tvEnergizedDesc"
        android:text="Energized"
        android:textColor="#FF9100"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:ems="10"
        android:hint="Search users"
        android:inputType="textPersonName" />


    <ImageView
        android:id="@+id/btnSearch"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginStart="5dp"
        android:layout_marginTop="95dp"
        android:layout_toEndOf="@+id/etSearch"
        android:src="@drawable/search_icon" />


</RelativeLayout>